<% provide(:title, "オプション") %>

<div class="container">
  <div class="row">
  <div class="col-9 col-md-5 mx-auto mt-5" style="width: 100%;">
  <div class="option">
    <div class="form-title text-center pt-3 mb-4 border-bottom border-dark">
        オプション
    </div>
    <div class="option-contents">
    <div class="option-content text-center mb-2">
      <%= link_to "プロフィール編集", edit_user_path(@user), class:"category-link" %>
    </div>

    <div class="option-content text-center">
     <%= link_to "アカウントを削除", @user, method: :delete,
                             data: { confirm: "本当に削除してもいいですか?" }, class:"category-link" %>
    </div>
    
    <div class="option-content text-center pb5-5">
      <%= link_to "ログアウト", logout_path, method: :delete, class:"nav-link category-link" %>
    </div>
  </div>
</div>
</div>
</div>