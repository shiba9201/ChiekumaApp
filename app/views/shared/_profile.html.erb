<div class="container">
  <div class="row mt-5 text-center">
    <div class="user-info mx-auto", style="width: 150px;">
      <%= image_tag (@user.picture.url), class:"show-img" %><P class="mt-1"><%= @user.name %>
      <span><%= link_to option_user_path(current_user) do %><i class="fas fa-cogs"></i><% end %></span></P>
    </div> 
  </div>
</div>

<div class="container">
  <div class="border-bottom text-center mb-3">
    <%= link_to "いいね", like_path(current_user), class:"category-link pr-5" %><span class="bar">｜</span>
    <%= link_to "投稿一覧", posted_micropost_path(current_user), class:"category-link pl-5" %>
  </div>
</div>