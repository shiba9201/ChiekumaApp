<div class="post-form col-11 col-md-5 mx-auto">
    <%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :"カテゴリー" %><span class="required-tag"> 必須</span>
  　   <%= f.select :category_id, [["チーズ", 1], ["タピオカ", 2], ["肉", 3], ["ラーメン", 4], ["韓国", 5], ["いちご", 6],["抹茶",7],["オムレツ",8],["その他",9]] ,class:"form-control" %>
      
    　<%= f.label :picture %><span class="required-tag"> 必須</span>
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'%>
      
      <%= f.label :name %><span class="required-tag"> 必須</span>
      <%= f.text_field :name, placeholder: "例）とろとろチーズ",calss: 'form-control' %> 

      <%= f.label :recommendation %><span class="required-tag"> 必須</span>
      <%= f.text_field :recommendation,placeholder: "口に入れた瞬間にとろけます", calss: 'form-control' %>

      <%= f.label :store %><span class="required-tag"> 必須</span>
      <%= f.text_field :store, placeholder: "例）とろとろチーズ",calss: 'form-control' %>
      
      <%= f.label :plase %><span class="optional-tag"> 任意</span>
      <%= f.text_field :plase, placeholder: "例）とろとろチーズ",calss: 'form-control' %>

      <%= f.label :time %><span class="optional-tag"> 任意</span>
      <%= f.text_field :time,placeholder: "6:00~20:00", calss: 'form-control' %>

      <%= f.label :holiday %><span class="optional-tag"> 任意</span>
      <%= f.text_field :holiday, placeholder: "例）とろとろチーズ",calss: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary mt-3" %>

<% end %>
</div>



<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>